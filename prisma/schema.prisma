generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Person {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Basic info - REQUIRED fields
  firstName              String
  lastName               String
  phoneNumber            String
  recruitNumber          String
  previousWorkExperience String
  biography              String
  funFact                String

  // Basic info - OPTIONAL fields
  email        String?
  age          Int?
  placeOfBirth String?
  photo        String?

  // Social media
  instagram String?
  facebook  String?
  tikTok    String?

  // Interests & hobbies
  hobbies                   String[]
  favoriteMovie             String?
  favoriteTravelDestination String?
  favoriteFood              String?
  favoriteMusicGenreArtist  String?
  bestConcertEvent          String?
  karaokeSong               String?
  weekendActivity           String?
  favoriteAnimal            String?

  // Personal traits
  hiddenTalent String?

  // Security
  secretPin String
}

model Image {
  id  Int    @id @default(autoincrement())
  url String
}

model Password {
  id       Int    @id @default(autoincrement())
  password String @unique
}
